<%
  referrals_count = @user.referrals.count

  stops = User::REFERRAL_STEPS

  found = nil

  stops.each { |stop|
    if stop["count"] == referrals_count
      stop["selected"] = true
      stop["passed"] = false
      found = stop
    elsif stop["count"] < referrals_count
      stop["selected"] = false
      stop["passed"] = true
    else
      stop["selected"] = false
      stop["passed"] = false
    end
  }
%>
<div class="prizes <% if found %>prize-<%= found["class"] %><% end %>">
  <div class="page-content">
    <p class="callout brandon">Your Numbers:</p>
    <ul class="products clearfix">
      <li class="title brandon"><p class="friends">Friends:<span class="mobile"> <%= @user.referrals.count %></span></p><p class="rewards">Discount:<span class="mobile"> <%= found["html"].html_safe %></span></p></li>
      <% stops.each do |stop| %>
        <li class="product brandon <%= stop["class"] %> <% if stop["selected"] %>selected<% end %> <% if stop["passed"] %>passed<% end %> <% if stop["class"] == 'twenty' %>last<% end %>">
          <div class="circle"><%= stop["count"] %></div>
          <div class="sep"></div>
          <p><%= stop["html"].html_safe %></p>
        </li>
      <% end %>
    </ul>

    <%
      words = ''
      if referrals_count == 1
        words = 'friend has'
      elsif
        words = 'friends have'
      end
    %>

    <% if referrals_count == 0 %>
      <p class="place brandon"><span>No</span> friends have joined...Yet!</p>
    <% else %>
      <p class="place brandon"><span><%= referrals_count %></span> <%= words %> joined</p>
    <% end %>
    <p class="check brandon">Keep checking</p>

    <a class="policy brandon" href="/privacy-policy" target="_blank">Privacy Policy</a>
  </div>
</div>